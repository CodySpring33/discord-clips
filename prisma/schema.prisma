datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Video {
  id          String   @id @default(cuid())
  title       String
  description String?
  url         String   @unique
  storageKey  String   @unique // S3/R2 key
  mimeType    String
  size        Int      // in bytes
  duration    Int?     // in seconds
  views       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  status      VideoStatus @default(PROCESSING)
  ipAddress   String   // for rate limiting and abuse prevention
}

enum VideoStatus {
  PROCESSING
  READY
  FAILED
} 